<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
	<th>First name</th>
	<th>Second name</th>
	<th>Student email</th>
      <th>School name</th>
      <th>School number</th>
      <th colspan="3"></th>
	
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
	 <td><%= student.first_name %></td>
	 <td><%= student.second_name %></td>
	<td><%= student.email %></td>
        <td><%= student.school.school_name %></td>
        <td><%= student.school.school_number %></td>
        <td><%= link_to 'ShowSchool', student.school %></td>
        <td><%= link_to 'EditSchool', edit_school_path(student.school) %></td>
        <td><%= link_to 'DestroyStudent', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td><%= link_to 'ShowStudetn', student %></td>
        <td><%= link_to 'EditStudent', edit_student_path(student.school) %></td>
        <td><%= link_to 'DestroyStudent', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

